<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EncounterActivity"
    tools:showIn="@layout/activity_encounter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#6D1111"
            android:orientation="vertical">

            <Button
                android:id="@+id/persoButton"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_weight="0"
                android:backgroundTint="#0D47A1"
                android:text="H" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:layout_weight="0" />

            <Button
                android:id="@+id/monsterButton"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_weight="0"
                android:backgroundTint="#FF6F00"
                android:text="M" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:layout_weight="0" />

            <Button
                android:id="@+id/encounterButton"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_weight="0"
                android:backgroundTint="#C20909"
                android:text="E" />
        </LinearLayout>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Players" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DD" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Generate" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monsters " />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>